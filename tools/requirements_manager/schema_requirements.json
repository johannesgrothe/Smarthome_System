{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [
    "settings",
    "requirements"
  ],
  "properties": {
    "settings": {
      "type": "object",
      "required": ["next_id"],
      "properties": {
        "next_id": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "requirements": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "title",
          "description",
          "userstories",
          "owner",
          "status"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "minimum": 0
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": ["string", "null"]
          },
          "userstories": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "owner": {
            "type": ["string", "null"]
          },
          "valid": {
            "type": "boolean"
          }
        }
      }
    }
  }
}
