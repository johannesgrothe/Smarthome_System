{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [
    "username",
    "password",
    "access_level",
    "persistent"
  ],
  "properties": {
    "username": {
      "type": "string",
      "minLength": 3,
      "maxLength": 100
    },
    "password": {
      "type": "string",
      "minLength": 6,
      "maxLength": 300
    },
    "access_level": {
      "type": "integer",
      "minimum": 0,
      "maximum": 9
    },
    "persistent": {
      "type": "boolean"
    }
  }
}
