{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [
    "gadgets"
  ],
  "properties": {
    "gadgets": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "integer",
            "minimum": 0,
            "maximum": 255
          },
          "name": {
            "type": "string"
          },
          "ports": {
            "type": "object",
            "patternProperties": {
              "^port[0-9]+$": {
                "type": "integer",
                "minimum": 0
              }
            }
          },
          "events": {
            "type": "object",
            "patternProperties": {
              "[a-z0-9_]+": {
                "type": "array",
                "items": {
                  "type": "integer",
                  "minimum": 0
                }
              }
            }
          }
        }
      }
    }
  }
}
