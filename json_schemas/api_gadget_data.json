{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [
    "name",
    "type",
    "characteristics"
  ],
  "properties": {
    "name": {
      "type": "string"
    },
    "type": {
      "type": "integer",
      "minimum": 0
    },
    "characteristics": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "type",
          "min",
          "max",
          "steps",
          "step_value",
          "true_value",
          "percentage_value"
        ],
        "properties": {
          "type": {
            "type": "integer",
            "minimum": 0
          },
          "min": {
            "type": "integer"
          },
          "max": {
            "type": "integer"
          },
          "steps": {
            "type": "integer",
            "minimum": 0
          },
          "step_value": {
            "type": "integer",
            "minimum": 0
          },
          "true_value": {
            "type": "integer"
          },
          "percentage_value": {
            "type": "integer",
            "minimum": 0,
            "maximum": 100
          }
        }
      }
    },
    "client": {
      "type": "string",
      "description": "When communicating gadget information from the bridge to an app/webinterface the client id needed"
    }
  }
}
