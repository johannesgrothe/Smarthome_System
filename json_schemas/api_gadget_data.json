{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [
    "id",
    "type",
    "class",
    "attributes"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "type": {
      "type": "integer",
      "minimum": 0
    },
    "class": {
      "type": "integer",
      "minimum": 0
    },
    "attributes": {
      "type": "object",
      "additionalProperties": {
        "type": "object"
      }
    },
    "client": {
      "type": "string",
      "description": "When communicating gadget information from the bridge to an app/webinterface the client id needed"
    }
  }
}
