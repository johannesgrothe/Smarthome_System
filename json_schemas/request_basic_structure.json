{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [
    "sender",
    "receiver",
    "session_id",
    "payload"
  ],
  "properties": {
    "sender": {
      "type": "string"
    },
    "receiver": {
      "type": ["string", "null"]
    },
    "session_id": {
      "type": "integer",
      "minimum": 0
    },
    "payload": {
      "type": "object"
    }
  }
}