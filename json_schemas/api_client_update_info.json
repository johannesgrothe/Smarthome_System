{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [
    "id",
    "runtime_id",
    "power_mode"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string"
    },
    "runtime_id": {
      "type": "integer",
      "minimum": 0
    },
    "power_mode": {
      "type": "object",
      "required": [
        "power_type"
      ],
      "properties": {
        "power_type": {
          "type": "string",
          "enum": [
            "grid",
            "battery"
          ]
        },
        "battery_level": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        }
      }
    }
  }
}
