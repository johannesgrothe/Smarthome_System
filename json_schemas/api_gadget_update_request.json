{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [
    "id",
    "characteristics"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "characteristics": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "type",
          "step_value"
        ],
        "properties": {
          "type": {
            "type": "integer",
            "minimum": 0
          },
          "step_value": {
            "type": "integer"
          }
        }
      }
    }
  }
}
