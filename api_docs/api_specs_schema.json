{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [
    "title",
    "description",
    "version",
    "mappings"
  ],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 10
    },
    "description": {
      "type": "string",
      "minLength": 10
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+.[0-9]+.[0-9]+$"
    },
    "mappings": {
      "type": "object",
      "additionalProperties": {
        "required": [
          "title",
          "description",
          "broadcast_allowed",
          "sender",
          "receiver",
          "http_method",
          "uri",
          "request",
          "response"
        ],
        "properties": {
          "title": {
            "type": "string",
            "minLength": 5
          },
          "description": {
            "type": "string",
            "minLength": 15
          },
          "sender": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 5
            }
          },
          "receiver": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 5
            }
          },
          "broadcast_allowed": {
            "type": "boolean"
          },
          "http_method": {
            "enum": ["GET","POST", null]
          },
          "uri": {
            "properties": {
              "value": {
                "type": "string",
                "pattern": "^([a-z0-9_]+/)*?[a-z0-9_]+$"
              },
              "var_name": {
                "type": "string",
                "minLength": 5,
                "pattern": "^[a-z_]+$"
              }
            }
          },
          "request": {
            "type": "object",
            "required": [
              "schema",
              "comment"
            ],
            "properties": {
              "schema": {
                "type": "string",
                "pattern": ".+\\.json$"
              },
              "comment": {
                "type": "string"
              }
            }
          },
          "response": {
            "type": "object",
            "required": [
              "schema",
              "comment"
            ],
            "properties": {
              "schema": {
                "type": ["string", "null"],
                "pattern": ".+\\.json$"
              },
              "comment": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
