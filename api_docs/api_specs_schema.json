{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "req_title": {
      "type": "string",
      "minLength": 5
    },
    "req_description": {
      "type": "string",
      "minLength": 15
    },
    "req_comment": {
      "type": "string"
    },
    "req_sender": {
      "type": "array",
      "items": {
        "enum": [
          "client",
          "bridge",
          "web_application"
        ]
      }
    },
    "req_access_type": {
      "enum": [
        "read",
        "write"
      ]
    },
    "req_broadcast_allowed": {
      "type": "boolean"
    },
    "req_uri": {
      "properties": {
        "value": {
          "$ref": "#/definitions/uri_value"
        },
        "var_name": {
          "$ref": "#/definitions/var_name"
        }
      }
    },
    "res_schema": {
      "type": [
        "string",
        "null"
      ],
      "pattern": ".+\\.json$"
    },
    "req_request": {
      "type": "object",
      "required": [
        "schema",
        "comment"
      ],
      "properties": {
        "schema": {
          "type": "string",
          "pattern": ".+\\.json$"
        },
        "comment": {
          "$ref": "#/definitions/req_comment"
        }
      }
    },
    "req_response": {
      "type": "object",
      "required": [
        "schema",
        "comment"
      ],
      "properties": {
        "schema": {
          "type": [
            "string",
            "null"
          ],
          "pattern": ".+\\.json$"
        },
        "comment": {
          "$ref": "#/definitions/req_comment"
        }
      }
    },
    "uri_value": {
      "type": "string",
      "pattern": "^([a-z0-9_]+/)*?[a-z0-9_]+$"
    },
    "var_name": {
      "type": "string",
      "minLength": 5,
      "pattern": "^[a-z_]+$"
    }
  },
  "type": "object",
  "required": [
    "title",
    "description",
    "version",
    "mappings",
    "access_level"
  ],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 10
    },
    "description": {
      "type": "string",
      "minLength": 10
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+.[0-9]+.[0-9]+$"
    },
    "mappings": {
      "type": "object",
      "required": [
        "bridge",
        "client"
      ],
      "properties": {
        "bridge": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "required": [
              "title",
              "description",
              "access_level",
              "broadcast_allowed",
              "sender",
              "access_type",
              "client_channel_only",
              "uri",
              "request",
              "response"
            ],
            "properties": {
              "title": {
                "$ref": "#/definitions/req_title"
              },
              "description": {
                "$ref": "#/definitions/req_title"
              },
              "access_level": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "sender": {
                "$ref": "#/definitions/req_sender"
              },
              "broadcast_allowed": {
                "$ref": "#/definitions/req_broadcast_allowed"
              },
              "access_type": {
                "$ref": "#/definitions/req_access_type"
              },
              "client_channel_only": {
                "type": "boolean",
                "description": "Whether requests are only allowed on client channel (mqtt) or not "
              },
              "uri": {
                "$ref": "#/definitions/req_uri"
              },
              "request": {
                "$ref": "#/definitions/req_request"
              },
              "response": {
                "$ref": "#/definitions/req_response"
              }
            },
            "additionalProperties": false
          }
        },
        "client": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "required": [
              "title",
              "description",
              "broadcast_allowed",
              "sender",
              "uri",
              "request",
              "response"
            ],
            "properties": {
              "title": {
                "$ref": "#/definitions/req_title"
              },
              "description": {
                "$ref": "#/definitions/req_title"
              },
              "sender": {
                "$ref": "#/definitions/req_sender"
              },
              "broadcast_allowed": {
                "$ref": "#/definitions/req_broadcast_allowed"
              },
              "uri": {
                "$ref": "#/definitions/req_uri"
              },
              "request": {
                "$ref": "#/definitions/req_request"
              },
              "response": {
                "$ref": "#/definitions/req_response"
              }
            },
            "additionalProperties": false
          }
        }
      }
    },
    "access_level": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": [
          "description",
          "name",
          "id",
          "var_name"
        ],
        "properties": {
          "description": {
            "type": "string",
            "minLength": 15
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "id": {
            "type": "integer",
            "minimum": 0
          },
          "var_name": {
            "type": "string",
            "minLength": 3,
            "pattern": "^[a-z_]+$"
          }
        }
      }
    }
  }
}
