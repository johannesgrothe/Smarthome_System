{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "minLength": 10
    },
    "description": {
      "type": "string",
      "minLength": 10
    },
    "categories": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": [
          "title",
          "description",
          "mappings"
        ],
        "properties": {
          "title": {
            "type": "string",
            "description": "Title of the api message category"
          },
          "description": {
            "type": "string",
            "description": "Description of the api message category"
          },
          "mappings": {
            "type": "object",
            "additionalProperties": {
              "required": [
                "title",
                "description",
                "broadcast_allowed",
                "is_outbound",
                "request",
                "response"
              ],
              "properties": {
                "title": {
                  "type": "string",
                  "minLength": 5
                },
                "description": {
                  "type": "string",
                  "minLength": 15
                },
                "is_outbound": {
                  "type": "boolean"
                },
                "broadcast_allowed": {
                  "type": "boolean"
                },
                "request": {
                  "type": "object",
                  "required": [
                    "schema",
                    "comment"
                  ],
                  "properties": {
                    "schema": {
                      "type": "string",
                      "pattern": ".+\\.json$"
                    },
                    "comment": {
                      "type": "string"
                    }
                  }
                },
                "response": {
                  "type": "object",
                  "required": [
                    "schema",
                    "comment"
                  ],
                  "properties": {
                    "schema": {
                      "type": "string",
                      "pattern": ".+\\.json$"
                    },
                    "comment": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
